<div class="modal-content w-100">

        <div class="flex pt-3">
            <div class="flex-none">
                <button type="button" class="btn-close " data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
                
            <div class="flex-grow-1 mb-2">     
                <%= image_tag("avatar.png", size:"100x100", class:"mx-auto", alt:"site avatar") %>
            </div>
        </div>

        <div class="pt-3">  
            <h2 class="h4 text-center">Login/Signup - user_auth_form</h2>
        </div>

        <hr>

        <div class="modal-body ">
            <%= form_with url: api_users_by_email_path do |f| %>
            
                <!-- Name input -->
                <div data-mdb-input-init class="form-outline mb-4">
                
                    <%= f.label :name, class: "form-label", placeholder: "placeholder email"  %>
                    <%= f.text_field :name, class: "form-control border border-dark", placeholder: "placeholder name"  %>

                    <label class="form-label" for="name1">Name</label>
                    <input type="text" id="name1" class="form-control border border-dark" value="default-name" />
                </div>

                <!-- Email input -->
                <div data-mdb-input-init class="form-outline mb-4">
                    <%= f.label :email, class: "form-label", placeholder: "placeholder email"  %>
                    <%= f.email_field :email, class: "form-control border border-dark", placeholder: "placeholder email"  %>

                    <label class="form-label" for="email1">Email address</label> 
                    <input type="email" id="email1" class="form-control border border-dark" placeholder="default-email" value="heidlessemail05@gmail.com" />
                </div>

                <!-- password input -->
                <div data-mdb-input-init class="form-outline mb-4">
                    <%= f.label :password, class: "form-label", placeholder: "placeholder password"  %>
                    <%= f.password_field :password, class:"form-control border border-dark" %>
                    
                    <%= f.label :password_confirmation, class: "form-label", placeholder: "placeholder password"  %>
                    <%= f.password_field :password_confirmation, class:"form-control border border-dark" %>

                    <label class="form-label" for="password1">Password</label>
                    <input type="password" id="password1" class="form-control border border-dark" />
                </div>

                <div class="modal-header">
                    <!-- Submit button -->
                    <%= f.submit "Continue", class: "btn btn-primary btn-block w-100"  %>

                    <button type="submit" data-mdb-but ton-init data-mdb-ripple-init class="btn btn-primary btn-block w-100">Sign up</button>
                </div>
        
            <% end %>

        
            <div class="modal-header">
                <button type="button" class="btn btn-light btn-block w-100 border border-dark">
                    <i class="fa fa-brands fa-google"></i> Continue with Google
                </button>
            </div>
            
        </div>
    </div>
